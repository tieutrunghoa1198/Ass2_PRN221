@page
@model Ass2_PRN221.Pages.Product.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a href="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].QuantityPerUnit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].ProductImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Suppliers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Categories)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Product) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantityPerUnit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductImage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Suppliers.SupplierID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categories.CategoryID)
            </td>
            <td>
                <a class="nav-link text-dark" href="/Staff/Product/Edit?id=@item.ProductID">Edit</a> |
                    <a class="nav-link text-dark" href="/Staff/Product/Details?id=@item.ProductID">Details</a> |
                    <a class="nav-link text-dark" href="/Staff/Product/Delete?id=@item.ProductID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
